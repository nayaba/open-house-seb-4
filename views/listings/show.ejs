<%- include('../partials/head') %>
<div class="container mt-4">
    <div class="card mx-auto shadow-lg" style="max-width: 800px;">
        <img src="<%= listing.imgUrl %>" class="card-img-top" alt="Listing for <%= listing.streetAddress %>" style="max-height: 400px; object-fit: cover;">
        <div class="card-body">
            <h4 class="card-title text-primary fw-bold">$<%= listing.price %></h4>
            <p class="card-text"><strong><%= listing.streetAddress %>, <%= listing.city %></strong></p>
            <p class="card-text">Size: <%= listing.size %> mÂ²</p>
            <p class="text-muted">Listed by: <%= listing.owner.username || 'Unknown' %></p>
            
            <div class="d-flex justify-content-center flex-column gap-2 mb-3">
                <a href="/listings" class="btn btn-link">Back to Listings</a>
                <% if (listing.owner._id.equals(user._id)) { %>
                    <form action="/listings/<%= user._id %>/<%= listing._id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    <a href="/listings/<%= user._id %>/<%= listing._id %>/edit" class="btn btn-warning">Edit</a>
                <% } %>
            </div>
            
            <div class="d-inline-flex border-top pt-3">
                <!-- <h5 class="fw-bold">Favorites</h5>
                <p class="card-text">Favorited by <strong><%= listing.favoritedByUsers.length %></strong> users</p> -->
                <% if (userHasFavorited) { %>
                    <!-- <p class="text-muted">You've favorited this listing!</p> -->
                    <form action="/listings/<%= listing._id %>/favorited-by/<%= user._id %>?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-link p-0 border-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart-fill" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314"/>
                          </svg>
                           <strong><%= listing.favoritedByUsers.length %></strong> favorites
                        </button>
                    </form>
                <% } else { %>
                    <form action="/listings/<%= listing._id %>/favorited-by/<%= user._id %>" method="POST">
                        <button type="submit" class="btn btn-link p-0 border-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
                            <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143q.09.083.176.171a3 3 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15"/>
                          </svg>
                          <strong><%= listing.favoritedByUsers.length %></strong> favorites
                        </button>
                    </form>
                <% } %>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>
